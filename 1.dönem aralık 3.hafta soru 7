import java.util.Scanner;

public class metni_ikiye_bölüp_her_parçasını_tersten_yazdırma {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner input= new Scanner(System.in);
		System.out.println("metni giriniz ");
		String txt=input.nextLine();
		for(int i=0;i<txt.length()/2;i++)
        {
        	System.out.print(txt.charAt(txt.length()-1-i));
        }
		for(int i=1;i<=txt.length()/2;i++)
        {
        	System.out.print(txt.charAt(txt.length()/2-i));
        }
		
	}
}
