import java.util.Scanner;

public class xaçısınınsinüsdeğerinibelirtilenterimsayısınakadaraçarakhesaplayanprogram {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner input =new Scanner(System.in);
		System.out.println("x i gir");
		double x= input.nextDouble();
		System.out.println("n i gir");
		int n= input.nextInt();
		double t=1;
		for(int i=1;i<=n;i++)	
		{
			int f=1;
			for(int j=1;j<=2*i;j++)	
			{
				f*=j;
				
			}
			t=t+ Math.pow((-1), i-(-1))* Math.pow(x, (2*(i-1)))/f;
		}
		System.out.println(t);
		

	}

}
